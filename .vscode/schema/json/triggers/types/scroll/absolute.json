	"$id": "https://flowcards.mrf.io/json/triggers/types/scroll/absolute.json",
	"title": "Absolute Scroll trigger",
	"description": "Scroll trigger based on absolute pixels or percentage of scroll",
	"type": "object",
	"additionalProperties": false,
	"definitions": {},
	"required": [
		"type",
		"pixel",
		"percentage"
	],
	"properties": {
		"type": {
			"const": "absolute"
		},
		"pixel": {
