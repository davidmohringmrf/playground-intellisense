{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://flowcards.mrf.io/json/triggers/types/timeoutTrigger.json",
	"title": "Timeout trigger",
	"description": "Triggers the card when a timeout is reached",
	"type": "object",
	"additionalProperties": false,
	"definitions": {},
	"required": [
		"on",
		"spec"
	],
	"properties": {
		"on": {
			"const": "timeout"
		},
		"spec": {
			"type": "object",
			"description": "Number of ms to fire the timeout",
			"additionalProperties": false,
			"required": [
				"time"
			],
			"properties": {
				"time": {
					"type": "integer"
				}
			}
		}
	}
}
